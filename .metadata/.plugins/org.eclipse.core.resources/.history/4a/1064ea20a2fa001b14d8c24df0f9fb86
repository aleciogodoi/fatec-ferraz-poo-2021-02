//2.Faça um programa que receba três notas, 
//calcule e mostre a média aritmética entre elas.
import java.util.Scanner;  // Importando a Classe Scanner
public class Lista_01_02 {

	public static void main(String[] args) {
		int n1, n2, n3 ;
		Scanner meuScanner = new Scanner(System.in);  // Cria um objeto Scanner	
		System.out.print("Nota 1: ");
		n1 = meuScanner.nextInt();
		System.out.print("Nota 2: ");
		n2 = meuScanner.nextInt();
		System.out.print("Nota 3: ");
		n3 = meuScanner.nextInt();
		System.out.println("Média: "+ ((n1+n2+n3)/3) );		
	}

}
